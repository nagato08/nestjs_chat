generator client {
  provider = "prisma-client-js"
  moduleFormat = "cjs"
}

datasource db {
  provider = "postgresql"
}

model Player {
  id        Int    @id @default(autoincrement())
  firstName String @map("first_name")
  lastName  String @map("last_name")

  teamId Int  @map("team_id")
  team   Team @relation(fields: [teamId], references: [id])

  positionId Int      @map("position_id")
  position   Position @relation(fields: [positionId], references: [id])
}

model Team {
  id      Int     @id @default(autoincrement())
  name    String
  country String?

  players Player[]
}

model Position {
  id   Int    @id @default(autoincrement())
  name String

  players Player[]
}

model User{
  id String @id @default(cuid())
  firstName String @map("first_name")
  lastName String @map("last_name")
  email String @unique
  password String
  createdAt DateTime @default(now()) @map("created_at")
  isResetPasswordRequested Boolean @default(false) @map("is_reset_password_requested")
  resetPasswordToken String? @map("reset_password_token") @unique

  conversations Conversation[]
  sentMessages ChatMessage[]

}

model Conversation {
  id String @id @default(cuid())
  createdAt DateTime @default(now()) @map("created_at")
  updatedAt DateTime @updatedAt @map("updated_at")
  users User[]
  messages ChatMessage[]
}

model ChatMessage {
  id String @id @default(cuid())
  content String
  createdAt DateTime @default(now()) @map("created_at")
  sender User @relation(fields: [senderId], references: [id])
  senderId String @map("sender_id")
  conversation Conversation @relation(fields: [chatId], references: [id], onDelete: Cascade, onUpdate: Cascade)
  chatId String @map("chat_id")

  @@index([chatId])
  @@index([senderId])
}